#!/usr/bin/make -f

OUR_GOPATH := $(CURDIR)/.gopath
export GOPATH := $(OUR_GOPATH)

%:
	dh $@

override_dh_auto_configure:
	mkdir -p '$(OUR_GOPATH)/src/github.com/opencontainers'
	ln -sfT '$(CURDIR)/source' '$(OUR_GOPATH)/src/github.com/opencontainers/runc'

override_dh_auto_test:

override_dh_usrlocal:

#PREFIX

override_dh_auto_build:
	cd '$(OUR_GOPATH)/src/github.com/opencontainers/runc' && make

override_dh_install:
	cd '$(OUR_GOPATH)/src/github.com/opencontainers/runc' && make install PREFIX=$(CURDIR)/debian/darch-runc